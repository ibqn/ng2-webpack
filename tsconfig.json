{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,

  "filesGlob": [
    "**/*.ts",
    "!node_modules",
    "node_modules/@types"
  ],

  "angularCompilerOptions": {
    "genDir": ".",
    "skipMetadataEmit" : true
  }
}
